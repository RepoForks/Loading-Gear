<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:shareInterpolator="false" >

    <rotate
        android:duration="@integer/loading_duration"
        android:interpolator="@anim/loading_interpolator"
        android:pivotX="50%"
        android:pivotY="50%"
        android:repeatCount="infinite"
        android:repeatMode="restart"
        android:fromDegrees="@integer/loading_from"
        android:toDegrees="@integer/loading_to" />

</set>